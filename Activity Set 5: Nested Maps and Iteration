#include <iostream>
#include <map>
#include <string>
using namespace std;

int main() {
    
    map<string, map<string, int>> students;

    //student 1
    students["Ella"]["Math"] = 91;
    students["Ella"]["English"] = 88;
    students["Ella"]["Science"] = 90;

    //student 2
    students["Eljay"]["Math"] = 85;
    students["Eljay"]["English"] = 82;
    students["Eljay"]["Science"] = 80;

    // Print details
    for (auto &student : students) {
        cout << "Student: " << student.first << endl;

        int total = 0;
        int count = 0;

        // Calculate each studentâ€™s average score.
        for (auto &sub : student.second) {
            cout << "  " << sub.first << ": " << sub.second << endl;
            total += sub.second;
            count++;
        }
        
        //Prints each studentâ€™s average score.
        double average = (count > 0) ? (double)total / count : 0;
        cout << "  Average: " << average << "\n" << endl;
    }

    return 0;
}
